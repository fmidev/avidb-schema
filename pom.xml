<?xml version="1.0"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>fi.fmi</groupId>
        <artifactId>fmi-os-parent-pom</artifactId>
        <version>0.8.2</version>
    </parent>

    <groupId>fi.fmi.avi.avidb</groupId>
    <artifactId>fmi-avidb-schema</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>FMI AVIDB schema</name>
    <description>
        FMI aviation message database schema
    </description>

    <scm>
        <connection>${scm-url}</connection>
        <developerConnection>${scm-url}</developerConnection>
        <url>${scm-web-url}</url>
    </scm>

    <properties>
        <postgresql-schema-dir>fi/fmi/avi/avidb/schema/postgresql</postgresql-schema-dir>
        <h2-schema-dir>fi/fmi/avi/avidb/schema/h2</h2-schema-dir>
    </properties>

    <build>
        <resources>
            <resource>
                <directory>postgresql</directory>
                <targetPath>${postgresql-schema-dir}</targetPath>
            </resource>
            <resource>
                <directory>h2</directory>
                <targetPath>${h2-schema-dir}</targetPath>
            </resource>
        </resources>
    </build>

</project>
